@model IEnumerable<ProductDto>

<br />
<br />

<head>
    <script src="~/js/product.js"></script>
</head>

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Products List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="CreateProduct" class="btn btn-outline-primary btn-rounded"> <i class="fas fa-plus"></i> Create Product</a>
        </div>
    </div>
    <table class="table align-middle mb-0 bg-white" id="producttable">
        <thead class="bg-light">
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <img src="@item.ImageURL"
                             alt="@item.Description"
                             style="width: 45px; height: 45px"
                             class="rounded-circle" />
                            <div class="ms-3">
                                <p class="fw-bold mb-1">@item.Name</p>
                            </div>
                        </div>
                    </td>
                    <td>
                        <p class="fw-normal mb-1">@item.CategoryName</p>
                    </td>
                    <td>
                        <p class="fw-normal mb-1">@item.Price.ToString("C")</p>
                    </td>
                    <td>
                        <a type="button" asp-action="EditProduct" asp-route-productId="@item.ProductId" class="btn btn-primary btn-rounded">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                    </td>
                    <td>
                        <a type="button" asp-action="DeleteProduct" asp-route-productId="@item.ProductId" class="btn btn-danger btn-rounded">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts{
<script src="~/js/product.js"></script>
}